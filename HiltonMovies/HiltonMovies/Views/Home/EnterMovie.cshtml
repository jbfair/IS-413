@{
    ViewData["Title"] = "Movie Submissions";
}

@model HiltonMovies.Models.MovieModel;
<div asp-validation-summary="All">
</div>
<div>
    <form method="post">
        <input asp-for="MovieID" type="hidden"/>
        <label>Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach(Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>
        <br />

        <label>Title:</label>
        <input asp-for="Title"/>
        <br />

        <label>Year:</label>
        <input asp-for="Year"/>
        <br />

        <label>Director:</label>
        <input asp-for="Director"/>
        <br />

        <label>Rating:</label>
        <select asp-for="Rating">
            <option disabled selected>--Please Choose a Rating--</option>
            <option value="R">R</option>
            <option value="PG-13">PG-13</option>
            <option value="PG">PG</option>
            <option value="G">G</option>
        </select>
        <br />

        <label>Edited:</label>
        <select asp-for="Edited">
            <option></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label>Lent to:</label>
        <input asp-for="Lent"/>
        <br />

        <label>Notes:</label>
        <input asp-for="Notes"/>
        <br />

        <button type="submit">Submit Movie</button>
    </form>
</div>